{
  "metrics": {
    "bde": {
      "command": "curl -o /dev/null -s -w 'duration: %{time_total} s\\nstatus: %{http_code}' https://mail.bigdeskenergy.com",
      "frequency": "30s"
    },
    "google": {
      "command": "curl -o /dev/null -s -w 'duration: %{time_total} s\\nstatus: %{http_code}' https://www.google.com",
      "frequency": "1m"
    }
  },
  "graphs": {
    "Response Time: mail.bigdeskenergy.com (Last hour)": {
      "metric": "bde",
      "source": "latest",
      "limit": "1h",
      "type": "LineChart",
      "x-axis": "timestamp",
      "y-axis": "duration"
    },
    "Response Time: mail.bigdeskenergy.com (Last 24 hours)": {
      "metric": "bde",
      "source": "rollup-5m",
      "limit": "24h",
      "type": "LineChart",
      "x-axis": "timestamp",
      "y-axis": "duration"
    },
    "Status Codes: All Sites (Last hour)": {
      "metric": "*",
      "source": "latest",
      "limit": "1h",
      "type": "BarChart",
      "x-axis": "timestamp",
      "y-axis": "status"
    }
  }
}